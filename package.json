{
  "name": "seven",
  "version": "1.0.0",
  "description": "Seven — Cross-Platform AI Assistant (Electron + Capacitor + Web)",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START=1 electron .\"",
    "build": "npm run build:web",
    "build:web": "vite build",
    "build:electron": "npm run build:web && electron-builder",
    "build:electron:win": "npm run build:web && electron-builder --win",
    "build:electron:mac": "npm run build:web && electron-builder --mac",
    "build:electron:linux": "npm run build:web && electron-builder --linux",
    "build:mobile": "npm run build:web && npm run sync:mobile",
    "build:android": "npm run build:web && npx cap sync android && npx cap build android",
    "build:ios": "npm run build:web && npx cap sync ios && npx cap build ios",
    "build:all": "npm run build:web && npm run build:electron && npm run build:mobile",
    "preview": "vite preview",
    "sync:mobile": "npx cap sync",
    "sync:android": "npx cap sync android",
    "sync:ios": "npx cap sync ios",
    "run:android": "npx cap run android",
    "run:ios": "npx cap run ios",
    "open:android": "npx cap open android",
    "open:ios": "npx cap open ios"
  },
  "dependencies": {
    "@capacitor/core": "^5.5.1",
    "axios": "^1.6.2",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.548.0",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/ios": "^5.5.1",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "node-record-lpcm16": "^1.0.1",
    "postcss": "^8.4.32",
    "say": "^0.16.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-pwa": "^1.1.0",
    "wait-on": "^7.2.0",
    "workbox-window": "^7.3.0"
  },
  "build": {
    "appId": "com.seven.assistant",
    "productName": "Seven AI Assistant",
    "copyright": "Copyright © 2024 Seven",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules/**/*",
      "!src/**/*",
      "!*.ts",
      "!*.md"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Seven"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  }
}
